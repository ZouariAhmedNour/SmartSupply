@model SmartSupply.Domain.Models.Commande
@{
    ViewData["Title"] = "Supprimer une Commande";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Commandes</a></li>
                <li class="breadcrumb-item active" aria-current="page">Supprimer</li>
            </ol>
        </nav>
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-exclamation-triangle-fill text-danger fs-1 me-3"></i>
            <div>
                <h1 class="h2 fw-bold mb-0 text-danger">Confirmation de Suppression</h1>
                <p class="text-muted mb-0">Cette action est irréversible</p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Alerte de confirmation -->
            <div class="alert alert-danger border-0 shadow-sm d-flex align-items-center mb-4" role="alert">
                <i class="bi bi-exclamation-circle-fill fs-3 me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">Êtes-vous sûr de vouloir supprimer cette commande ?</h5>
                    <p class="mb-0">Cette action supprimera définitivement la commande et toutes les données associées.</p>
                </div>
            </div>

            <!-- Carte d'informations de la commande -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-danger bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-danger">
                        <i class="bi bi-cart-x me-2"></i>Commande à Supprimer
                    </h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <!-- Section Client -->
                        <div class="col-12 mb-3">
                            <h6 class="text-muted border-bottom pb-2">
                                <i class="bi bi-person-circle me-2"></i>Informations Client
                            </h6>
                        </div>

                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-person me-2"></i>Nom du Client
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <span class="fs-5 fw-semibold">@Html.DisplayFor(model => model.ClientNom)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-envelope me-2"></i>Email
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <a href="mailto:@Model.ClientEmail" class="text-decoration-none fs-5">
                                @Html.DisplayFor(model => model.ClientEmail)
                            </a>
                        </dd>

                        <!-- Section Commande -->
                        <div class="col-12 mt-3 mb-3">
                            <h6 class="text-muted border-bottom pb-2">
                                <i class="bi bi-cart-check me-2"></i>Détails de la Commande
                            </h6>
                        </div>

                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-calendar-event me-2"></i>Date de Création
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <span class="fs-5">@Model.DateCreation.ToString("dd/MM/yyyy HH:mm")</span>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-flag me-2"></i>Statut
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            @if (Model.Statut == "Livrée")
                            {
                                <span class="badge bg-success-subtle text-success px-3 py-2 fs-6">
                                    <i class="bi bi-check-circle-fill me-1"></i>@Model.Statut
                                </span>
                            }
                            else if (Model.Statut == "En attente")
                            {
                                <span class="badge bg-warning-subtle text-warning px-3 py-2 fs-6">
                                    <i class="bi bi-clock-fill me-1"></i>@Model.Statut
                                </span>
                            }
                            else if (Model.Statut == "En cours")
                            {
                                <span class="badge bg-info-subtle text-info px-3 py-2 fs-6">
                                    <i class="bi bi-arrow-repeat me-1"></i>@Model.Statut
                                </span>
                            }
                            else if (Model.Statut == "Annulée")
                            {
                                <span class="badge bg-danger-subtle text-danger px-3 py-2 fs-6">
                                    <i class="bi bi-x-circle-fill me-1"></i>@Model.Statut
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary-subtle text-secondary px-3 py-2 fs-6">
                                    @Model.Statut
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3">
                            <i class="bi bi-currency-euro me-2"></i>Montant Total
                        </dt>
                        <dd class="col-sm-8 py-3">
                            <span class="fs-3 fw-bold text-success">@Model.MontantTotal.ToString("C2")</span>
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Avertissement supplémentaire -->
            <div class="alert alert-warning border-0 mb-4 d-flex align-items-start" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-3 fs-5"></i>
                <div>
                    <strong>Impact potentiel :</strong>
                    <ul class="mb-0 mt-2">
                        <li>Les détails de la commande seront définitivement perdus</li>
                        <li>Les rapports financiers devront être recalculés</li>
                        <li>L'historique client sera affecté</li>
                        <li>Cette action ne peut pas être annulée</li>
                    </ul>
                </div>
            </div>

            <!-- Formulaire de confirmation -->
            <div class="card shadow-sm border-danger rounded-3">
                <div class="card-body p-4">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                                <label class="form-check-label fw-semibold" for="confirmDelete">
                                    Je comprends que cette action est irréversible et supprimera définitivement cette commande
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2 pt-3 border-top">
                            <button type="submit" class="btn btn-danger btn-lg px-4" id="deleteBtn" disabled>
                                <i class="bi bi-trash me-2"></i>Confirmer la Suppression
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Activer le bouton de suppression uniquement si la case est cochée
        document.getElementById('confirmDelete').addEventListener('change', function() {
            document.getElementById('deleteBtn').disabled = !this.checked;
        });
    </script>
}

<style>
    .alert-danger {
        background-color: #f8d7da;
        color: #842029;
    }

    .alert-warning {
        background-color: #fff3cd;
        color: #664d03;
    }

    .card-body dl.row dt {
        display: flex;
        align-items: center;
    }

    .btn:disabled {
        cursor: not-allowed;
        opacity: 0.5;
    }

    .form-check-input:checked {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .form-check-input:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
    }

    .border-bottom {
        border-bottom: 1px solid #e9ecef !important;
    }
</style>