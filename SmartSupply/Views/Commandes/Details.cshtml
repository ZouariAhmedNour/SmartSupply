@model SmartSupply.Domain.Models.Commande
@{
    ViewData["Title"] = "Détails de la Commande";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Commandes</a></li>
                <li class="breadcrumb-item active" aria-current="page">Détails</li>
            </ol>
        </nav>
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-cart-check text-primary fs-1 me-3"></i>
            <div>
                <h1 class="h2 fw-bold mb-0">Détails de la Commande</h1>
                <p class="text-muted mb-0">Informations complètes de la commande client</p>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Carte principale des informations -->
        <div class="col-lg-8">
            <!-- Section Client -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-primary bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-person-circle me-2"></i>Informations Client
                    </h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-person me-2"></i>Nom du Client
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <span class="fs-5 fw-semibold">@Html.DisplayFor(model => model.ClientNom)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3">
                            <i class="bi bi-envelope me-2"></i>Email
                        </dt>
                        <dd class="col-sm-8 py-3">
                            <a href="mailto:@Model.ClientEmail" class="text-decoration-none fs-5">
                                <i class="bi bi-envelope-fill me-1"></i>@Html.DisplayFor(model => model.ClientEmail)
                            </a>
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Section Commande -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-primary bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-cart-check me-2"></i>Détails de la Commande
                    </h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-calendar-event me-2"></i>Date de Création
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <span class="fs-5">@Model.DateCreation.ToString("dd/MM/yyyy HH:mm")</span>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-flag me-2"></i>Statut
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            @if (Model.Statut == "Livrée")
                            {
                                <span class="badge bg-success-subtle text-success px-3 py-2 fs-6">
                                    <i class="bi bi-check-circle-fill me-1"></i>@Model.Statut
                                </span>
                            }
                            else if (Model.Statut == "En attente")
                            {
                                <span class="badge bg-warning-subtle text-warning px-3 py-2 fs-6">
                                    <i class="bi bi-clock-fill me-1"></i>@Model.Statut
                                </span>
                            }
                            else if (Model.Statut == "En cours")
                            {
                                <span class="badge bg-info-subtle text-info px-3 py-2 fs-6">
                                    <i class="bi bi-arrow-repeat me-1"></i>@Model.Statut
                                </span>
                            }
                            else if (Model.Statut == "Annulée")
                            {
                                <span class="badge bg-danger-subtle text-danger px-3 py-2 fs-6">
                                    <i class="bi bi-x-circle-fill me-1"></i>@Model.Statut
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary-subtle text-secondary px-3 py-2 fs-6">
                                    @Model.Statut
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3">
                            <i class="bi bi-currency-euro me-2"></i>Montant Total
                        </dt>
                        <dd class="col-sm-8 py-3">
                            <span class="fs-3 fw-bold text-success">@Model.MontantTotal.ToString("C2")</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Carte latérale avec les actions -->
        <div class="col-lg-4">
            <!-- Résumé de la commande -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-body text-center p-4">
                    <div class="avatar-circle bg-primary bg-opacity-25 mx-auto mb-3">
                        <i class="bi bi-receipt text-primary"></i>
                    </div>
                    <h4 class="fw-bold mb-1">Commande #@Model.Id</h4>
                    <p class="text-muted mb-0">@Model.ClientNom</p>
                </div>
            </div>

            <!-- Informations financières -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-light border-0 py-3">
                    <h6 class="mb-0 fw-bold">
                        <i class="bi bi-cash-stack me-2"></i>Informations Financières
                    </h6>
                </div>
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">Montant HT</span>
                        <span class="fw-bold">@((Model.MontantTotal / 1.2m).ToString("C2"))</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-muted">TVA (20%)</span>
                        <span class="fw-bold">@((Model.MontantTotal - Model.MontantTotal / 1.2m).ToString("C2"))</span>
                    </div>
                    <div class="border-top pt-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold">Montant TTC</span>
                            <span class="fs-4 fw-bold text-success">@Model.MontantTotal.ToString("C2")</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-light border-0 py-3">
                    <h6 class="mb-0 fw-bold">
                        <i class="bi bi-lightning me-2"></i>Actions Rapides
                    </h6>
                </div>
                <div class="card-body p-3">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Modifier la Commande
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour à la Liste
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-2"></i>Supprimer la Commande
                        </a>
                    </div>
                </div>
            </div>

            <!-- Informations système -->
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light border-0 py-3">
                    <h6 class="mb-0 fw-bold">
                        <i class="bi bi-info-square me-2"></i>Informations Système
                    </h6>
                </div>
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">ID Commande</small>
                        <span class="badge bg-secondary">#@Model.Id</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">Date de création</small>
                        <small>@Model.DateCreation.ToString("dd/MM/yyyy")</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
    }

    dl.row dt {
        display: flex;
        align-items: center;
    }

    .card {
        transition: transform 0.2s ease;
    }

    .btn {
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
        }

    .border-bottom {
        border-bottom: 1px solid #e9ecef !important;
    }
</style>