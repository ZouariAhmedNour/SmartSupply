@model SmartSupply.Domain.Models.Commande
@{
    ViewData["Title"] = "Modifier une Commande";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Commandes</a></li>
                <li class="breadcrumb-item active" aria-current="page">Modifier</li>
            </ol>
        </nav>
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-pencil-square text-primary fs-1 me-3"></i>
            <div>
                <h1 class="h2 fw-bold mb-0">Modifier la Commande</h1>
                <p class="text-muted mb-0">Mettre à jour les informations de la commande</p>
            </div>
        </div>
    </div>

    <!-- Formulaire dans une carte -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-info-circle me-2"></i>Informations de la Commande
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            <!-- Section Client -->
                            <div class="col-12">
                                <h6 class="text-muted mb-3 border-bottom pb-2">
                                    <i class="bi bi-person-circle me-2"></i>Informations Client
                                </h6>
                            </div>

                            <!-- Nom du Client -->
                            <div class="col-md-6">
                                <label asp-for="ClientNom" class="form-label fw-semibold">
                                    <i class="bi bi-person me-1"></i>Nom du Client
                                </label>
                                <input asp-for="ClientNom" class="form-control form-control-lg" placeholder="Ex: Jean Dupont" />
                                <span asp-validation-for="ClientNom" class="text-danger small"></span>
                            </div>

                            <!-- Email du Client -->
                            <div class="col-md-6">
                                <label asp-for="ClientEmail" class="form-label fw-semibold">
                                    <i class="bi bi-envelope me-1"></i>Email du Client
                                </label>
                                <input asp-for="ClientEmail" type="email" class="form-control form-control-lg" placeholder="client@exemple.com" />
                                <span asp-validation-for="ClientEmail" class="text-danger small"></span>
                            </div>

                            <!-- Section Commande -->
                            <div class="col-12 mt-4">
                                <h6 class="text-muted mb-3 border-bottom pb-2">
                                    <i class="bi bi-cart-check me-2"></i>Détails de la Commande
                                </h6>
                            </div>

                            <!-- Statut -->
                            <div class="col-md-6">
                                <label asp-for="Statut" class="form-label fw-semibold">
                                    <i class="bi bi-flag me-1"></i>Statut
                                </label>
                                <select asp-for="Statut" class="form-select form-select-lg">
                                    <option value="">-- Sélectionnez un statut --</option>
                                    <option value="En attente">En attente</option>
                                    <option value="En cours">En cours</option>
                                    <option value="Livrée">Livrée</option>
                                    <option value="Annulée">Annulée</option>
                                </select>
                                <span asp-validation-for="Statut" class="text-danger small"></span>
                            </div>

                            <!-- Montant Total -->
                            <div class="col-md-6">
                                <label asp-for="MontantTotal" class="form-label fw-semibold">
                                    <i class="bi bi-currency-euro me-1"></i>Montant Total
                                </label>
                                <div class="input-group input-group-lg">
                                    <input asp-for="MontantTotal" type="number" step="0.01" class="form-control" placeholder="0.00" min="0" />
                                    <span class="input-group-text">€</span>
                                </div>
                                <span asp-validation-for="MontantTotal" class="text-danger small"></span>
                            </div>

                            <!-- Date de Création (readonly) -->
                            <div class="col-12">
                                <label asp-for="DateCreation" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-event me-1"></i>Date de Création
                                </label>
                                <input asp-for="DateCreation" type="datetime-local" class="form-control form-control-lg" readonly />
                                <span asp-validation-for="DateCreation" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Informations supplémentaires -->
                        <div class="alert alert-warning border-0 mt-4 d-flex align-items-start" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-3 fs-5"></i>
                            <div>
                                <strong>Attention :</strong> La modification du statut ou du montant peut avoir un impact sur les rapports et la facturation.
                            </div>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="d-flex gap-2 mt-4 pt-3 border-top">
                            <button type="submit" class="btn btn-primary btn-lg px-4">
                                <i class="bi bi-save me-2"></i>Enregistrer les Modifications
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus,
    .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .form-control[readonly] {
        background-color: #f8f9fa;
        cursor: not-allowed;
    }

    .border-bottom {
        border-bottom: 2px solid #e9ecef !important;
    }
</style>