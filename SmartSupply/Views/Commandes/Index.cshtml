@model IEnumerable<SmartSupply.Domain.Models.Commande>
@{
    ViewData["Title"] = "Gestion des Commandes";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Commandes</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <i class="bi bi-cart-check-fill text-primary fs-1 me-3"></i>
                <div>
                    <h1 class="h2 fw-bold mb-0">Gestion des Commandes</h1>
                    <p class="text-muted mb-0">Liste complète des commandes clients</p>
                </div>
            </div>
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>Créer une Commande
            </a>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Commandes</h6>
                            <h3 class="fw-bold text-primary mb-0">@Model.Count()</h3>
                        </div>
                        <i class="bi bi-cart4 fs-1 text-primary opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Montant Total</h6>
                            <h3 class="fw-bold text-success mb-0">@(Model.Any() ? Model.Sum(c => c.MontantTotal).ToString("C2") : "0 €")</h3>
                        </div>
                        <i class="bi bi-currency-euro fs-1 text-success opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-warning bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">En Attente</h6>
                            <h3 class="fw-bold text-warning mb-0">@Model.Count(c => c.Statut == "En attente")</h3>
                        </div>
                        <i class="bi bi-clock-fill fs-1 text-warning opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-info bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Montant Moyen</h6>
                            <h3 class="fw-bold text-info mb-0">@(Model.Any() ? Model.Average(c => c.MontantTotal).ToString("C2") : "0 €")</h3>
                        </div>
                        <i class="bi bi-bar-chart-fill fs-1 text-info opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Carte contenant le tableau -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary bg-opacity-10 border-0 py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-list-ul me-2"></i>Liste des Commandes
                    </h5>
                </div>
                <div class="col-auto">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Rechercher...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="commandesTable">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4 py-3 fw-semibold">
                                <i class="bi bi-person me-1"></i>@Html.DisplayNameFor(model => model.ClientNom)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="bi bi-envelope me-1"></i>@Html.DisplayNameFor(model => model.ClientEmail)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="bi bi-calendar-event me-1"></i>@Html.DisplayNameFor(model => model.DateCreation)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="bi bi-flag me-1"></i>@Html.DisplayNameFor(model => model.Statut)
                            </th>
                            <th class="py-3 fw-semibold text-end">
                                <i class="bi bi-currency-euro me-1"></i>@Html.DisplayNameFor(model => model.MontantTotal)
                            </th>
                            <th class="py-3 text-center fw-semibold">
                                <i class="bi bi-gear me-1"></i>Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2">
                                            <i class="bi bi-person-fill text-primary"></i>
                                        </div>
                                        <span class="fw-semibold">@Html.DisplayFor(modelItem => item.ClientNom)</span>
                                    </div>
                                </td>
                                <td>
                                    <a href="mailto:@item.ClientEmail" class="text-decoration-none">
                                        <i class="bi bi-envelope-fill text-muted me-1"></i>
                                        @Html.DisplayFor(modelItem => item.ClientEmail)
                                    </a>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        @item.DateCreation.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </td>
                                <td>
                                    @if (item.Statut == "Livrée")
                                    {
                                        <span class="badge bg-success-subtle text-success px-3 py-2">
                                            <i class="bi bi-check-circle-fill me-1"></i>@item.Statut
                                        </span>
                                    }
                                    else if (item.Statut == "En attente")
                                    {
                                        <span class="badge bg-warning-subtle text-warning px-3 py-2">
                                            <i class="bi bi-clock-fill me-1"></i>@item.Statut
                                        </span>
                                    }
                                    else if (item.Statut == "En cours")
                                    {
                                        <span class="badge bg-info-subtle text-info px-3 py-2">
                                            <i class="bi bi-arrow-repeat me-1"></i>@item.Statut
                                        </span>
                                    }
                                    else if (item.Statut == "Annulée")
                                    {
                                        <span class="badge bg-danger-subtle text-danger px-3 py-2">
                                            <i class="bi bi-x-circle-fill me-1"></i>@item.Statut
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary px-3 py-2">
                                            @item.Statut
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <span class="fw-bold text-success fs-6">@item.MontantTotal.ToString("C2")</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-info"
                                           title="Voir les détails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-warning"
                                           title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Fonctionnalité de recherche en temps réel
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchValue = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#commandesTable tbody tr');

            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });
    </script>
}

<style>
    .table > tbody > tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }

    .btn-group .btn {
        transition: all 0.2s ease;
    }

        .btn-group .btn:hover {
            transform: translateY(-2px);
        }

    .badge {
        font-weight: 600;
        font-size: 0.85rem;
    }
</style>