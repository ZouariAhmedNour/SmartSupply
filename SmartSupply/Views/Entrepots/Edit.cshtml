@model SmartSupply.Domain.Models.Entrepot
@{
    ViewData["Title"] = "Modifier un Entrepôt";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Entrepôts</a></li>
                <li class="breadcrumb-item active" aria-current="page">Modifier</li>
            </ol>
        </nav>
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-pencil-square text-info fs-1 me-3"></i>
            <div>
                <h1 class="h2 fw-bold mb-0">Modifier l'Entrepôt</h1>
                <p class="text-muted mb-0">Mettre à jour les informations du site</p>
            </div>
        </div>
    </div>

    <!-- Formulaire dans une carte -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-info bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-info">
                        <i class="bi bi-info-circle me-2"></i>Informations de l'Entrepôt
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            <!-- Nom -->
                            <div class="col-12">
                                <label asp-for="Nom" class="form-label fw-semibold">
                                    <i class="bi bi-building me-1"></i>Nom de l'Entrepôt
                                </label>
                                <input asp-for="Nom" class="form-control form-control-lg" placeholder="Ex: Entrepôt Central Paris" />
                                <span asp-validation-for="Nom" class="text-danger small"></span>
                            </div>

                            <!-- Adresse -->
                            <div class="col-12">
                                <label asp-for="Adresse" class="form-label fw-semibold">
                                    <i class="bi bi-geo-alt me-1"></i>Adresse
                                </label>
                                <textarea asp-for="Adresse" class="form-control form-control-lg" rows="3" placeholder="Entrez l'adresse complète"></textarea>
                                <span asp-validation-for="Adresse" class="text-danger small"></span>
                            </div>

                            <!-- Capacité Maximale -->
                            <div class="col-md-6">
                                <label asp-for="CapaciteMax" class="form-label fw-semibold">
                                    <i class="bi bi-boxes me-1"></i>Capacité Maximale
                                </label>
                                <div class="input-group input-group-lg">
                                    <input asp-for="CapaciteMax" type="number" class="form-control" placeholder="0" min="0" />
                                    <span class="input-group-text">unités</span>
                                </div>
                                <span asp-validation-for="CapaciteMax" class="text-danger small"></span>
                            </div>

                            <!-- Date de Création (readonly) -->
                            <div class="col-md-6">
                                <label asp-for="DateCreation" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-event me-1"></i>Date de Création
                                </label>
                                <input asp-for="DateCreation" type="datetime-local" class="form-control form-control-lg" readonly />
                                <span asp-validation-for="DateCreation" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Informations supplémentaires -->
                        <div class="alert alert-warning border-0 mt-4 d-flex align-items-start" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-3 fs-5"></i>
                            <div>
                                <strong>Attention :</strong> La modification de la capacité peut affecter les calculs de stock existants.
                            </div>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="d-flex gap-2 mt-4 pt-3 border-top">
                            <button type="submit" class="btn btn-info btn-lg px-4 text-white">
                                <i class="bi bi-save me-2"></i>Enregistrer les Modifications
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus,
    .form-select:focus {
        border-color: #0dcaf0;
        box-shadow: 0 0 0 0.25rem rgba(13, 202, 240, 0.25);
    }

    .form-control[readonly] {
        background-color: #f8f9fa;
        cursor: not-allowed;
    }

    textarea.form-control {
        resize: vertical;
    }
</style>