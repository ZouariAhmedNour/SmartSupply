@model SmartSupply.Domain.Models.Produit
@{
    ViewData["Title"] = "Créer un Produit";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Produits</a></li>
                <li class="breadcrumb-item active" aria-current="page">Nouveau</li>
            </ol>
        </nav>
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-box-seam-fill text-success fs-1 me-3"></i>
            <div>
                <h1 class="h2 fw-bold mb-0">Créer un Produit</h1>
                <p class="text-muted mb-0">Ajouter un nouvel article au catalogue</p>
            </div>
        </div>
    </div>

    <!-- Formulaire dans une carte -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-success bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-success">
                        <i class="bi bi-info-circle me-2"></i>Informations du Produit
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <!-- Nom -->
                            <div class="col-12">
                                <label asp-for="Nom" class="form-label fw-semibold">
                                    <i class="bi bi-box me-1"></i>Nom du Produit
                                </label>
                                <input asp-for="Nom" class="form-control form-control-lg" placeholder="Ex: Ordinateur Portable Dell" />
                                <span asp-validation-for="Nom" class="text-danger small"></span>
                            </div>

                            <!-- Description -->
                            <div class="col-12">
                                <label asp-for="Description" class="form-label fw-semibold">
                                    <i class="bi bi-card-text me-1"></i>Description
                                </label>
                                <textarea asp-for="Description" class="form-control form-control-lg" rows="4" placeholder="Décrivez les caractéristiques du produit..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <!-- Code SKU -->
                            <div class="col-md-6">
                                <label asp-for="CodeSKU" class="form-label fw-semibold">
                                    <i class="bi bi-upc-scan me-1"></i>Code SKU
                                </label>
                                <input asp-for="CodeSKU" class="form-control form-control-lg font-monospace" placeholder="Ex: PROD-2024-001" />
                                <span asp-validation-for="CodeSKU" class="text-danger small"></span>
                                <small class="form-text text-muted">Code unique d'identification du produit</small>
                            </div>

                            <!-- Prix Unitaire -->
                            <div class="col-md-6">
                                <label asp-for="PrixUnitaire" class="form-label fw-semibold">
                                    <i class="bi bi-currency-euro me-1"></i>Prix Unitaire
                                </label>
                                <div class="input-group input-group-lg">
                                    <input asp-for="PrixUnitaire" type="number" step="0.01" class="form-control" placeholder="0.00" min="0" />
                                    <span class="input-group-text">€</span>
                                </div>
                                <span asp-validation-for="PrixUnitaire" class="text-danger small"></span>
                            </div>

                            <!-- Date de Création -->
                            <div class="col-12">
                                <label asp-for="DateCreation" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-event me-1"></i>Date de Création
                                </label>
                                <input asp-for="DateCreation" type="datetime-local" class="form-control form-control-lg" />
                                <span asp-validation-for="DateCreation" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Informations supplémentaires -->
                        <div class="alert alert-success border-0 mt-4 d-flex align-items-start" role="alert">
                            <i class="bi bi-lightbulb-fill me-3 fs-5"></i>
                            <div>
                                <strong>Astuce :</strong> Utilisez un code SKU descriptif et unique pour faciliter la gestion de votre inventaire.
                            </div>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="d-flex gap-2 mt-4 pt-3 border-top">
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Créer le Produit
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus,
    .form-select:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.25);
    }

    textarea.form-control {
        resize: vertical;
    }

    .font-monospace {
        font-family: 'Courier New', monospace;
    }
</style>