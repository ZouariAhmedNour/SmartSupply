@model SmartSupply.Domain.Models.Produit
@{
    ViewData["Title"] = "Supprimer un Produit";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Produits</a></li>
                <li class="breadcrumb-item active" aria-current="page">Supprimer</li>
            </ol>
        </nav>
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-exclamation-triangle-fill text-danger fs-1 me-3"></i>
            <div>
                <h1 class="h2 fw-bold mb-0 text-danger">Confirmation de Suppression</h1>
                <p class="text-muted mb-0">Cette action est irréversible</p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Alerte de confirmation -->
            <div class="alert alert-danger border-0 shadow-sm d-flex align-items-center mb-4" role="alert">
                <i class="bi bi-exclamation-circle-fill fs-3 me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">Êtes-vous sûr de vouloir supprimer ce produit ?</h5>
                    <p class="mb-0">Cette action supprimera définitivement le produit et pourrait affecter les stocks et commandes associés.</p>
                </div>
            </div>

            <!-- Carte d'informations du produit -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-danger bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-danger">
                        <i class="bi bi-box-seam-fill me-2"></i>Produit à Supprimer
                    </h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-box me-2"></i>Nom
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <span class="fs-5 fw-semibold">@Html.DisplayFor(model => model.Nom)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-card-text me-2"></i>Description
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <p class="mb-0">@Html.DisplayFor(model => model.Description)</p>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-upc-scan me-2"></i>Code SKU
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <span class="badge bg-secondary-subtle text-secondary px-3 py-2 fs-6 font-monospace">
                                @Html.DisplayFor(model => model.CodeSKU)
                            </span>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-currency-euro me-2"></i>Prix Unitaire
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <span class="fs-4 fw-bold text-success">@Model.PrixUnitaire.ToString("C2")</span>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3">
                            <i class="bi bi-calendar-event me-2"></i>Date de Création
                        </dt>
                        <dd class="col-sm-8 py-3">
                            <span class="fs-5">@Html.DisplayFor(model => model.DateCreation)</span>
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Avertissement supplémentaire -->
            <div class="alert alert-warning border-0 mb-4 d-flex align-items-start" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-3 fs-5"></i>
                <div>
                    <strong>Impact potentiel :</strong>
                    <ul class="mb-0 mt-2">
                        <li>Les stocks de ce produit dans tous les entrepôts seront supprimés</li>
                        <li>Les commandes en cours contenant ce produit seront affectées</li>
                        <li>L'historique des ventes sera impacté</li>
                        <li>Les rapports et statistiques devront être recalculés</li>
                    </ul>
                </div>
            </div>

            <!-- Formulaire de confirmation -->
            <div class="card shadow-sm border-danger rounded-3">
                <div class="card-body p-4">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                                <label class="form-check-label fw-semibold" for="confirmDelete">
                                    Je comprends que cette action est irréversible et qu'elle peut affecter les stocks, commandes et données associées
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2 pt-3 border-top">
                            <button type="submit" class="btn btn-danger btn-lg px-4" id="deleteBtn" disabled>
                                <i class="bi bi-trash me-2"></i>Confirmer la Suppression
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Activer le bouton de suppression uniquement si la case est cochée
        document.getElementById('confirmDelete').addEventListener('change', function() {
            document.getElementById('deleteBtn').disabled = !this.checked;
        });
    </script>
}

<style>
    .alert-danger {
        background-color: #f8d7da;
        color: #842029;
    }

    .alert-warning {
        background-color: #fff3cd;
        color: #664d03;
    }

    .card-body dl.row dt {
        display: flex;
        align-items: center;
    }

    .btn:disabled {
        cursor: not-allowed;
        opacity: 0.5;
    }

    .form-check-input:checked {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .form-check-input:focus {
        border-color: #dc3545;
        box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
    }

    .font-monospace {
        font-family: 'Courier New', monospace;
    }
</style>