@model IEnumerable<SmartSupply.Domain.Models.Produit>
@{
    ViewData["Title"] = "Gestion des Produits";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Produits</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <i class="bi bi-box-seam text-success fs-1 me-3"></i>
                <div>
                    <h1 class="h2 fw-bold mb-0">Gestion des Produits</h1>
                    <p class="text-muted mb-0">Catalogue complet des articles disponibles</p>
                </div>
            </div>
            <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>Créer un Produit
            </a>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Produits</h6>
                            <h3 class="fw-bold text-success mb-0">@Model.Count()</h3>
                        </div>
                        <i class="bi bi-boxes fs-1 text-success opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Prix Moyen</h6>
                            <h3 class="fw-bold text-primary mb-0">@(Model.Any() ? Model.Average(p => p.PrixUnitaire).ToString("C2") : "0 €")</h3>
                        </div>
                        <i class="bi bi-currency-euro fs-1 text-primary opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-warning bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Prix Max</h6>
                            <h3 class="fw-bold text-warning mb-0">@(Model.Any() ? Model.Max(p => p.PrixUnitaire).ToString("C2") : "0 €")</h3>
                        </div>
                        <i class="bi bi-arrow-up-circle fs-1 text-warning opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-info bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Prix Min</h6>
                            <h3 class="fw-bold text-info mb-0">@(Model.Any() ? Model.Min(p => p.PrixUnitaire).ToString("C2") : "0 €")</h3>
                        </div>
                        <i class="bi bi-arrow-down-circle fs-1 text-info opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Carte contenant le tableau -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-success bg-opacity-10 border-0 py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0 fw-bold text-success">
                        <i class="bi bi-list-ul me-2"></i>Catalogue des Produits
                    </h5>
                </div>
                <div class="col-auto">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Rechercher...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="produitsTable">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4 py-3 fw-semibold">
                                <i class="bi bi-box me-1"></i>@Html.DisplayNameFor(model => model.Nom)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="bi bi-card-text me-1"></i>@Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="bi bi-upc-scan me-1"></i>@Html.DisplayNameFor(model => model.CodeSKU)
                            </th>
                            <th class="py-3 fw-semibold text-end">
                                <i class="bi bi-currency-euro me-1"></i>@Html.DisplayNameFor(model => model.PrixUnitaire)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="bi bi-calendar-event me-1"></i>@Html.DisplayNameFor(model => model.DateCreation)
                            </th>
                            <th class="py-3 text-center fw-semibold">
                                <i class="bi bi-gear me-1"></i>Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-success bg-opacity-10 rounded-circle p-2 me-2">
                                            <i class="bi bi-box-seam text-success"></i>
                                        </div>
                                        <span class="fw-semibold">@Html.DisplayFor(modelItem => item.Nom)</span>
                                    </div>
                                </td>
                                <td>
                                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Description)</small>
                                </td>
                                <td>
                                    <span class="badge bg-secondary-subtle text-secondary px-2 py-1 font-monospace">
                                        @Html.DisplayFor(modelItem => item.CodeSKU)
                                    </span>
                                </td>
                                <td class="text-end">
                                    <span class="fw-bold text-success">@item.PrixUnitaire.ToString("C2")</span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @Html.DisplayFor(modelItem => item.DateCreation)
                                    </small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-info"
                                           title="Voir les détails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-warning"
                                           title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Fonctionnalité de recherche en temps réel
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchValue = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#produitsTable tbody tr');

            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });
    </script>
}

<style>
    .table > tbody > tr:hover {
        background-color: rgba(25, 135, 84, 0.05);
    }

    .btn-group .btn {
        transition: all 0.2s ease;
    }

        .btn-group .btn:hover {
            transform: translateY(-2px);
        }

    .badge {
        font-weight: 600;
    }

    .font-monospace {
        font-family: 'Courier New', monospace;
    }
</style>