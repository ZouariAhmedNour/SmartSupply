@model SmartSupply.Domain.Models.Stock
@{
    ViewData["Title"] = "Créer un Stock";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Stocks</a></li>
                <li class="breadcrumb-item active" aria-current="page">Nouveau</li>
            </ol>
        </nav>
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-box-seam-fill text-primary fs-1 me-3"></i>
            <div>
                <h1 class="h2 fw-bold mb-0">Créer un Stock</h1>
                <p class="text-muted mb-0">Enregistrer un nouveau stock de produit</p>
            </div>
        </div>
    </div>

    <!-- Formulaire dans une carte -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-info-circle me-2"></i>Informations du Stock
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <!-- Section Identification -->
                            <div class="col-12">
                                <h6 class="text-muted mb-3 border-bottom pb-2">
                                    <i class="bi bi-tag-fill me-2"></i>Identification du Produit
                                </h6>
                            </div>

                            <!-- Produit -->
                            <div class="col-md-6">
                                <label asp-for="ProduitId" class="form-label fw-semibold">
                                    <i class="bi bi-box me-1"></i>Produit
                                </label>
                                <select asp-for="ProduitId" class="form-select form-select-lg" asp-items="ViewBag.ProduitId">
                                    <option value="">-- Sélectionnez un produit --</option>
                                </select>
                                <span asp-validation-for="ProduitId" class="text-danger small"></span>
                            </div>

                            <!-- Entrepôt -->
                            <div class="col-md-6">
                                <label asp-for="EntrepotId" class="form-label fw-semibold">
                                    <i class="bi bi-building me-1"></i>Entrepôt
                                </label>
                                <select asp-for="EntrepotId" class="form-select form-select-lg" asp-items="ViewBag.EntrepotId">
                                    <option value="">-- Sélectionnez un entrepôt --</option>
                                </select>
                                <span asp-validation-for="EntrepotId" class="text-danger small"></span>
                            </div>

                            <!-- Section Quantités -->
                            <div class="col-12 mt-4">
                                <h6 class="text-muted mb-3 border-bottom pb-2">
                                    <i class="bi bi-calculator me-2"></i>Gestion des Quantités
                                </h6>
                            </div>

                            <!-- Quantité Disponible -->
                            <div class="col-md-6">
                                <label asp-for="QuantiteDisponible" class="form-label fw-semibold">
                                    <i class="bi bi-stack me-1"></i>Quantité Disponible
                                </label>
                                <div class="input-group input-group-lg">
                                    <input asp-for="QuantiteDisponible" type="number" class="form-control" placeholder="0" min="0" />
                                    <span class="input-group-text">unités</span>
                                </div>
                                <span asp-validation-for="QuantiteDisponible" class="text-danger small"></span>
                            </div>

                            <!-- Seuil d'Alerte -->
                            <div class="col-md-6">
                                <label asp-for="SeuilAlerte" class="form-label fw-semibold">
                                    <i class="bi bi-exclamation-triangle me-1"></i>Seuil d'Alerte
                                </label>
                                <div class="input-group input-group-lg">
                                    <input asp-for="SeuilAlerte" type="number" class="form-control" placeholder="0" min="0" />
                                    <span class="input-group-text">unités</span>
                                </div>
                                <span asp-validation-for="SeuilAlerte" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Informations supplémentaires -->
                        <div class="alert alert-info border-0 mt-4 d-flex align-items-start" role="alert">
                            <i class="bi bi-lightbulb-fill me-3 fs-5"></i>
                            <div>
                                <strong>Astuce :</strong> Le seuil d'alerte vous notifiera automatiquement lorsque la quantité disponible devient inférieure à cette valeur.
                            </div>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="d-flex gap-2 mt-4 pt-3 border-top">
                            <button type="submit" class="btn btn-primary btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Créer le Stock
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus,
    .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .border-bottom {
        border-bottom: 2px solid #e9ecef !important;
    }
</style>