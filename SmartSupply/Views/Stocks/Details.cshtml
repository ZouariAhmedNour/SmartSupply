@model SmartSupply.Domain.Models.Stock
@{
    ViewData["Title"] = "Détails du Stock";
    var isAlert = Model.QuantiteDisponible <= Model.SeuilAlerte;
    var isRupture = Model.QuantiteDisponible == 0;
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Stock</a></li>
                <li class="breadcrumb-item active" aria-current="page">Détails</li>
            </ol>
        </nav>
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-box-seam text-primary fs-1 me-3"></i>
            <div>
                <h1 class="h2 fw-bold mb-0">Détails du Stock</h1>
                <p class="text-muted mb-0">Informations complètes de l'inventaire</p>
            </div>
        </div>
    </div>

    <!-- Alerte si stock faible ou rupture -->
    @if (isRupture)
    {
        <div class="alert alert-danger border-0 shadow-sm d-flex align-items-center mb-4" role="alert">
            <i class="bi bi-x-circle-fill fs-3 me-3"></i>
            <div>
                <h5 class="alert-heading mb-1">Rupture de Stock !</h5>
                <p class="mb-0">Ce produit n'est plus disponible dans cet entrepôt. Réapprovisionnement nécessaire.</p>
            </div>
        </div>
    }
    else if (isAlert)
    {
        <div class="alert alert-warning border-0 shadow-sm d-flex align-items-center mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
            <div>
                <h5 class="alert-heading mb-1">Alerte Stock Faible !</h5>
                <p class="mb-0">Le stock est en dessous du seuil d'alerte. Envisagez un réapprovisionnement.</p>
            </div>
        </div>
    }

    <div class="row">
        <!-- Carte principale des informations -->
        <div class="col-lg-8">
            <!-- Section Localisation -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-primary bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-geo-alt me-2"></i>Localisation
                    </h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-building me-2"></i>Entrepôt
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <span class="fs-5 fw-semibold">@Model.Entrepot?.Nom</span>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3">
                            <i class="bi bi-box-seam me-2"></i>Produit
                        </dt>
                        <dd class="col-sm-8 py-3">
                            <span class="fs-5 fw-semibold">@Model.Produit?.Nom</span>
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Section Quantités -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-primary bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-boxes me-2"></i>Informations de Stock
                    </h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-stack me-2"></i>Quantité Disponible
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            @if (isRupture)
                            {
                                <span class="badge bg-danger px-3 py-2 fs-4">
                                    <i class="bi bi-x-circle me-1"></i>@Model.QuantiteDisponible unités
                                </span>
                            }
                            else if (isAlert)
                            {
                                <span class="badge bg-warning px-3 py-2 fs-4">
                                    <i class="bi bi-exclamation-triangle me-1"></i>@Model.QuantiteDisponible unités
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success px-3 py-2 fs-4">
                                    <i class="bi bi-check-circle me-1"></i>@Model.QuantiteDisponible unités
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3">
                            <i class="bi bi-exclamation-triangle me-2"></i>Seuil d'Alerte
                        </dt>
                        <dd class="col-sm-8 py-3">
                            <span class="badge bg-secondary-subtle text-secondary px-3 py-2 fs-5">
                                @Model.SeuilAlerte unités
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Carte latérale avec les actions -->
        <div class="col-lg-4">
            <!-- Statut visuel -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-body text-center p-4">
                    <div class="avatar-circle @(isRupture ? "bg-danger" : isAlert ? "bg-warning" : "bg-success") bg-opacity-25 mx-auto mb-3">
                        <i class="bi @(isRupture ? "bi-x-circle-fill text-danger" : isAlert ? "bi-exclamation-triangle-fill text-warning" : "bi-check-circle-fill text-success")"></i>
                    </div>
                    <h4 class="fw-bold mb-1">
                        @if (isRupture)
                        {
                            <span class="text-danger">Rupture</span>
                        }
                        else if (isAlert)
                        {
                            <span class="text-warning">Alerte</span>
                        }
                        else
                        {
                            <span class="text-success">Stock OK</span>
                        }
                    </h4>
                    <p class="text-muted mb-0">État actuel du stock</p>
                </div>
            </div>

            <!-- Jauge de stock -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-light border-0 py-3">
                    <h6 class="mb-0 fw-bold">
                        <i class="bi bi-speedometer2 me-2"></i>Niveau de Stock
                    </h6>
                </div>
                <div class="card-body p-3">
                    @{
                        var percentage = Model.SeuilAlerte > 0 ? (Model.QuantiteDisponible * 100.0 / (Model.SeuilAlerte * 2)) : 100;
                        percentage = Math.Min(100, percentage);
                        var progressColor = percentage <= 50 ? "bg-danger" : percentage <= 100 ? "bg-warning" : "bg-success";
                    }
                    <div class="mb-2">
                        <div class="d-flex justify-content-between mb-1">
                            <small class="text-muted">Progression</small>
                            <small class="fw-bold">@percentage.ToString("F0")%</small>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar @progressColor" role="progressbar" style="width: @percentage%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">
                                @Model.QuantiteDisponible
                            </div>
                        </div>
                    </div>
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>Comparé au seuil d'alerte (x2)
                    </small>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-light border-0 py-3">
                    <h6 class="mb-0 fw-bold">
                        <i class="bi bi-lightning me-2"></i>Actions Rapides
                    </h6>
                </div>
                <div class="card-body p-3">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-2"></i>Ajuster le Stock
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour à la Liste
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-2"></i>Supprimer
                        </a>
                    </div>
                </div>
            </div>

            <!-- Informations système -->
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light border-0 py-3">
                    <h6 class="mb-0 fw-bold">
                        <i class="bi bi-info-square me-2"></i>Informations Système
                    </h6>
                </div>
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">ID Stock</small>
                        <span class="badge bg-secondary">#@Model.Id</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">Produit ID</small>
                        <span class="badge bg-secondary">#@Model.ProduitId</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
    }

    dl.row dt {
        display: flex;
        align-items: center;
    }

    .card {
        transition: transform 0.2s ease;
    }

    .btn {
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
        }

    .border-bottom {
        border-bottom: 1px solid #e9ecef !important;
    }

    .progress-bar {
        font-weight: bold;
    }
</style>