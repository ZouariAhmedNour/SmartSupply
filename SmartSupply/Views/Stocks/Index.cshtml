@model IEnumerable<SmartSupply.Domain.Models.Stock>
@{
    ViewData["Title"] = "Gestion du Stock";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Stock</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <i class="bi bi-boxes text-primary fs-1 me-3"></i>
                <div>
                    <h1 class="h2 fw-bold mb-0">Gestion du Stock</h1>
                    <p class="text-muted mb-0">Inventaire complet par entrepôt et produit</p>
                </div>
            </div>
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>Ajouter un Stock
            </a>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-primary bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Articles</h6>
                            <h3 class="fw-bold text-primary mb-0">@Model.Count()</h3>
                        </div>
                        <i class="bi bi-grid fs-1 text-primary opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-success bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Quantité Totale</h6>
                            <h3 class="fw-bold text-success mb-0">@(Model.Any() ? Model.Sum(s => s.QuantiteDisponible).ToString("N0") : "0")</h3>
                        </div>
                        <i class="bi bi-box-seam fs-1 text-success opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-warning bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Alertes</h6>
                            <h3 class="fw-bold text-warning mb-0">@Model.Count(s => s.QuantiteDisponible <= s.SeuilAlerte)</h3>
                        </div>
                        <i class="bi bi-exclamation-triangle fs-1 text-warning opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm bg-danger bg-opacity-10">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Ruptures</h6>
                            <h3 class="fw-bold text-danger mb-0">@Model.Count(s => s.QuantiteDisponible == 0)</h3>
                        </div>
                        <i class="bi bi-x-circle fs-1 text-danger opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Carte contenant le tableau -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary bg-opacity-10 border-0 py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-list-ul me-2"></i>Inventaire Complet
                    </h5>
                </div>
                <div class="col-auto">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Rechercher...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="stockTable">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4 py-3 fw-semibold">
                                <i class="bi bi-building me-1"></i>@Html.DisplayNameFor(model => model.Entrepot)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="bi bi-box-seam me-1"></i>@Html.DisplayNameFor(model => model.Produit)
                            </th>
                            <th class="py-3 fw-semibold text-center">
                                <i class="bi bi-boxes me-1"></i>@Html.DisplayNameFor(model => model.QuantiteDisponible)
                            </th>
                            <th class="py-3 fw-semibold text-center">
                                <i class="bi bi-exclamation-triangle me-1"></i>@Html.DisplayNameFor(model => model.SeuilAlerte)
                            </th>
                            <th class="py-3 fw-semibold text-center">
                                <i class="bi bi-activity me-1"></i>État
                            </th>
                            <th class="py-3 text-center fw-semibold">
                                <i class="bi bi-gear me-1"></i>Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var isAlert = item.QuantiteDisponible <= item.SeuilAlerte;
                            var isRupture = item.QuantiteDisponible == 0;

                            <tr class="@(isAlert ? "table-warning" : "")">
                                <td class="px-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-info bg-opacity-10 rounded-circle p-2 me-2">
                                            <i class="bi bi-warehouse text-info"></i>
                                        </div>
                                        <span class="fw-semibold">@Html.DisplayFor(modelItem => item.Entrepot.Nom)</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-success bg-opacity-10 rounded-circle p-2 me-2">
                                            <i class="bi bi-box text-success"></i>
                                        </div>
                                        <span class="fw-semibold">@Html.DisplayFor(modelItem => item.Produit.Nom)</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    @if (isRupture)
                                    {
                                        <span class="badge bg-danger px-3 py-2 fs-6">
                                            <i class="bi bi-x-circle me-1"></i>0
                                        </span>
                                    }
                                    else if (isAlert)
                                    {
                                        <span class="badge bg-warning px-3 py-2 fs-6">
                                            <i class="bi bi-exclamation-triangle me-1"></i>@item.QuantiteDisponible
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success px-3 py-2 fs-6">
                                            <i class="bi bi-check-circle me-1"></i>@item.QuantiteDisponible
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary-subtle text-secondary px-3 py-2">
                                        @item.SeuilAlerte
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (isRupture)
                                    {
                                        <span class="badge bg-danger-subtle text-danger px-3 py-2">
                                            <i class="bi bi-x-circle-fill me-1"></i>Rupture
                                        </span>
                                    }
                                    else if (isAlert)
                                    {
                                        <span class="badge bg-warning-subtle text-warning px-3 py-2">
                                            <i class="bi bi-exclamation-triangle-fill me-1"></i>Alerte
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success-subtle text-success px-3 py-2">
                                            <i class="bi bi-check-circle-fill me-1"></i>OK
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-info"
                                           title="Voir les détails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-warning"
                                           title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Légende -->
    <div class="card border-0 shadow-sm mt-4 bg-light">
        <div class="card-body p-3">
            <div class="d-flex align-items-center justify-content-center gap-4 flex-wrap">
                <div class="d-flex align-items-center">
                    <span class="badge bg-success me-2">OK</span>
                    <small class="text-muted">Stock suffisant</small>
                </div>
                <div class="d-flex align-items-center">
                    <span class="badge bg-warning me-2">Alerte</span>
                    <small class="text-muted">Stock faible (≤ seuil)</small>
                </div>
                <div class="d-flex align-items-center">
                    <span class="badge bg-danger me-2">Rupture</span>
                    <small class="text-muted">Stock épuisé (0)</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Fonctionnalité de recherche en temps réel
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchValue = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#stockTable tbody tr');

            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });
    </script>
}

<style>
    .table > tbody > tr:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }

    .table-warning {
        background-color: rgba(255, 193, 7, 0.1) !important;
    }

        .table-warning:hover {
            background-color: rgba(255, 193, 7, 0.15) !important;
        }

    .btn-group .btn {
        transition: all 0.2s ease;
    }

        .btn-group .btn:hover {
            transform: translateY(-2px);
        }

    .badge {
        font-weight: 600;
        font-size: 0.85rem;
    }
</style>