@model SmartSupply.Domain.Models.Utilisateur
@{
    ViewData["Title"] = "Détails de l'Utilisateur";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Utilisateurs</a></li>
                <li class="breadcrumb-item active" aria-current="page">Détails</li>
            </ol>
        </nav>
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-person-circle text-warning fs-1 me-3"></i>
            <div>
                <h1 class="h2 fw-bold mb-0">Profil Utilisateur</h1>
                <p class="text-muted mb-0">Informations complètes du compte</p>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Carte principale des informations -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-warning bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-warning">
                        <i class="bi bi-info-circle me-2"></i>Informations Personnelles
                    </h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-person me-2"></i>Nom
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <span class="fs-5">@Html.DisplayFor(model => model.Nom)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-person me-2"></i>Prénom
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <span class="fs-5">@Html.DisplayFor(model => model.Prenom)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-envelope me-2"></i>Email
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            <a href="mailto:@Model.Email" class="text-decoration-none fs-5">
                                @Html.DisplayFor(model => model.Email)
                            </a>
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3 border-bottom">
                            <i class="bi bi-shield-check me-2"></i>Rôle
                        </dt>
                        <dd class="col-sm-8 py-3 border-bottom">
                            @if (Model.Role == "Administrateur")
                            {
                                <span class="badge bg-danger-subtle text-danger px-3 py-2 fs-6">
                                    <i class="bi bi-shield-fill-check me-1"></i>@Model.Role
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-info-subtle text-info px-3 py-2 fs-6">
                                    <i class="bi bi-person-badge me-1"></i>@Model.Role
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted fw-semibold py-3">
                            <i class="bi bi-calendar-event me-2"></i>Date de Création
                        </dt>
                        <dd class="col-sm-8 py-3">
                            <span class="fs-5">@Html.DisplayFor(model => model.DateCreation)</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Carte latérale avec les actions -->
        <div class="col-lg-4">
            <!-- Avatar et nom -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-body text-center p-4">
                    <div class="avatar-circle bg-warning bg-opacity-25 mx-auto mb-3">
                        <i class="bi bi-person-fill text-warning"></i>
                    </div>
                    <h4 class="fw-bold mb-1">@Model.Prenom @Model.Nom</h4>
                    <p class="text-muted mb-0">@Model.Role</p>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="card shadow-sm border-0 rounded-3 mb-4">
                <div class="card-header bg-light border-0 py-3">
                    <h6 class="mb-0 fw-bold">
                        <i class="bi bi-lightning me-2"></i>Actions Rapides
                    </h6>
                </div>
                <div class="card-body p-3">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                            <i class="bi bi-pencil me-2"></i>Modifier le Profil
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour à la Liste
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-2"></i>Supprimer le Compte
                        </a>
                    </div>
                </div>
            </div>

            <!-- Informations système -->
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light border-0 py-3">
                    <h6 class="mb-0 fw-bold">
                        <i class="bi bi-info-square me-2"></i>Informations Système
                    </h6>
                </div>
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">ID Utilisateur</small>
                        <span class="badge bg-secondary">@Model.Id</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">Statut</small>
                        <span class="badge bg-success">Actif</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
    }

    dl.row dt {
        display: flex;
        align-items: center;
    }

    .card {
        transition: transform 0.2s ease;
    }

    .btn {
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
        }
</style>