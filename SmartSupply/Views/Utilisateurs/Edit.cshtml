@model SmartSupply.Domain.Models.Utilisateur
@{
    ViewData["Title"] = "Modifier un Utilisateur";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Utilisateurs</a></li>
                <li class="breadcrumb-item active" aria-current="page">Modifier</li>
            </ol>
        </nav>
        <div class="d-flex align-items-center mb-3">
            <i class="bi bi-pencil-square text-warning fs-1 me-3"></i>
            <div>
                <h1 class="h2 fw-bold mb-0">Modifier l'Utilisateur</h1>
                <p class="text-muted mb-0">Mettre à jour les informations du compte</p>
            </div>
        </div>
    </div>

    <!-- Formulaire dans une carte -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-warning bg-opacity-10 border-0 py-3">
                    <h5 class="mb-0 fw-bold text-warning">
                        <i class="bi bi-info-circle me-2"></i>Informations du Compte
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            <!-- Nom -->
                            <div class="col-md-6">
                                <label asp-for="Nom" class="form-label fw-semibold">
                                    <i class="bi bi-person me-1"></i>Nom
                                </label>
                                <input asp-for="Nom" class="form-control form-control-lg" placeholder="Entrez le nom" />
                                <span asp-validation-for="Nom" class="text-danger small"></span>
                            </div>

                            <!-- Prénom -->
                            <div class="col-md-6">
                                <label asp-for="Prenom" class="form-label fw-semibold">
                                    <i class="bi bi-person me-1"></i>Prénom
                                </label>
                                <input asp-for="Prenom" class="form-control form-control-lg" placeholder="Entrez le prénom" />
                                <span asp-validation-for="Prenom" class="text-danger small"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-12">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <i class="bi bi-envelope me-1"></i>Adresse Email
                                </label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="exemple@smartsupply.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <!-- Mot de passe -->
                            <div class="col-12">
                                <label asp-for="MdpHashed" class="form-label fw-semibold">
                                    <i class="bi bi-lock me-1"></i>Mot de Passe
                                </label>
                                <input asp-for="MdpHashed" type="password" class="form-control form-control-lg" placeholder="••••••••" />
                                <span asp-validation-for="MdpHashed" class="text-danger small"></span>
                                <small class="form-text text-muted">Laissez vide pour conserver le mot de passe actuel</small>
                            </div>

                            <!-- Rôle -->
                            <div class="col-md-6">
                                <label asp-for="Role" class="form-label fw-semibold">
                                    <i class="bi bi-shield-check me-1"></i>Rôle
                                </label>
                                <select asp-for="Role" class="form-select form-select-lg">
                                    <option value="">-- Sélectionnez un rôle --</option>
                                    <option value="Administrateur">Administrateur</option>
                                    <option value="Opérateur">Opérateur</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger small"></span>
                            </div>

                            <!-- Date de Création (readonly) -->
                            <div class="col-md-6">
                                <label asp-for="DateCreation" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-event me-1"></i>Date de Création
                                </label>
                                <input asp-for="DateCreation" type="datetime-local" class="form-control form-control-lg" readonly />
                                <span asp-validation-for="DateCreation" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Boutons d'action -->
                        <div class="d-flex gap-2 mt-4 pt-3 border-top">
                            <button type="submit" class="btn btn-warning btn-lg px-4">
                                <i class="bi bi-save me-2"></i>Enregistrer les Modifications
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left me-2"></i>Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control:focus,
    .form-select:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.25rem rgba(255, 193, 7, 0.25);
    }

    .form-control[readonly] {
        background-color: #f8f9fa;
        cursor: not-allowed;
    }
</style>