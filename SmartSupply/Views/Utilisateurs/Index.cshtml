@model IEnumerable<SmartSupply.Domain.Models.Utilisateur>
@{
    ViewData["Title"] = "Gestion des Utilisateurs";
}

<div class="container py-5">
    <!-- En-tête -->
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Utilisateurs</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <i class="bi bi-people-fill text-warning fs-1 me-3"></i>
                <div>
                    <h1 class="h2 fw-bold mb-0">Gestion des Utilisateurs</h1>
                    <p class="text-muted mb-0">Liste complète des comptes système</p>
                </div>
            </div>
            <a asp-action="Create" class="btn btn-warning btn-lg shadow-sm">
                <i class="bi bi-person-plus me-2"></i>Créer un Utilisateur
            </a>
        </div>
    </div>

    <!-- Carte contenant le tableau -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-warning bg-opacity-10 border-0 py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0 fw-bold text-warning">
                        <i class="bi bi-list-ul me-2"></i>Liste des Utilisateurs
                        <span class="badge bg-warning text-dark ms-2">@Model.Count() utilisateurs</span>
                    </h5>
                </div>
                <div class="col-auto">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control border-start-0" placeholder="Rechercher...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="usersTable">
                    <thead class="table-light">
                        <tr>
                            <th class="px-4 py-3 fw-semibold">
                                <i class="bi bi-person me-1"></i>@Html.DisplayNameFor(model => model.Nom)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="bi bi-person me-1"></i>@Html.DisplayNameFor(model => model.Prenom)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="bi bi-envelope me-1"></i>@Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="bi bi-shield-check me-1"></i>@Html.DisplayNameFor(model => model.Role)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="bi bi-calendar-event me-1"></i>@Html.DisplayNameFor(model => model.DateCreation)
                            </th>
                            <th class="py-3 text-center fw-semibold">
                                <i class="bi bi-gear me-1"></i>Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-4">
                                    <span class="fw-semibold">@Html.DisplayFor(modelItem => item.Nom)</span>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Prenom)</td>
                                <td>
                                    <a href="mailto:@item.Email" class="text-decoration-none">
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </a>
                                </td>
                                <td>
                                    @if (item.Role == "Administrateur")
                                    {
                                        <span class="badge bg-danger-subtle text-danger px-3 py-2">
                                            <i class="bi bi-shield-fill-check me-1"></i>@item.Role
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info-subtle text-info px-3 py-2">
                                            <i class="bi bi-person-badge me-1"></i>@item.Role
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @Html.DisplayFor(modelItem => item.DateCreation)
                                    </small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-info"
                                           title="Voir les détails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-warning"
                                           title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger"
                                           title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Fonctionnalité de recherche en temps réel
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchValue = this.value.toLowerCase();
            const tableRows = document.querySelectorAll('#usersTable tbody tr');

            tableRows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchValue) ? '' : 'none';
            });
        });
    </script>
}

<style>
    .table > tbody > tr:hover {
        background-color: rgba(255, 193, 7, 0.05);
    }

    .btn-group .btn {
        transition: all 0.2s ease;
    }

        .btn-group .btn:hover {
            transform: translateY(-2px);
        }

    .badge {
        font-weight: 600;
        font-size: 0.85rem;
    }
</style>